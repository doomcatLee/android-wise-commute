<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.wisecommute.TrainColorActivity">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/greenToClackamas"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To Clackamas"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp" />
        <Button
            android:id="@+id/greenToCityCenter"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To Clackamas"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="30dp" />

        <Button
            android:id="@+id/blueToGresham"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To Clackamas"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp" />
        <Button
            android:id="@+id/blueToHillsboro"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To Clackamas"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/redToAirport"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To Clackamas"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp" />
        <Button
            android:id="@+id/redToBeaverton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To Clackamas"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/yellowToExpo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To Clackamas"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp" />
        <Button
            android:id="@+id/yellowToCityCenter"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To Clackamas"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/orangeToMilwaukie"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To Clackamas"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp" />
        <Button
            android:id="@+id/orangeToCityCenter"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="To Clackamas"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/greenLine"
            android:layout_width="192dp"
            android:layout_height="170dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="Green Line" />

        <Button
            android:id="@+id/redLine"
            android:layout_width="192dp"
            android:layout_height="170dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="Red Line" />

        <Button
            android:id="@+id/blueLine"
            android:layout_width="192dp"
            android:layout_height="170dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="Blue Line" />

        <Button
            android:id="@+id/yellowLine"
            android:layout_width="192dp"
            android:layout_height="170dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="Yellow Line" />

        <Button
            android:id="@+id/orangeLine"
            android:layout_width="192dp"
            android:layout_height="170dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="Orange Line" />

        <Button
            android:id="@+id/wiseCommute"
            android:layout_width="192dp"
            android:layout_height="170dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="Wise Commute" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
